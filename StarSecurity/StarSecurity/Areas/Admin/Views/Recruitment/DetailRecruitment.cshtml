@model StarSecurity.Entites.Recruitment
@{
    ViewData["Title"] = "DetailRecruitment";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <style>
                                .card-body span{
                                    color: #F97F51;
                                }
                            </style>
                            <h2>Title: <span>@Model.Title</span> </h2>
                            <h4>Vacancies: <span>@Model.Vacancies</span></h4>
                            <h4>Quantity: <span>@Model.Count</span> </h4>
                            <h5>TimeStart: <span>@Model.TimeStart</span>  - TimeEnd: <span>@Model.TimeEnd</span> </h5>
                            <h4>Work Location: <span>@Model.Location</span></h4>
                            <h4>Salary: <span>@Model.Salary</span> </h4>
                        </div>
                    </div>
                    <br />
                    <div>
                        <h4>Description:</h4>
                        <blockquote class="blockquote">
                            @Html.Raw(Model.Description)
                        </blockquote>
                    </div>
                    <div>
                        <h4>Request:</h4>
                        <blockquote class="blockquote">
                            @Html.Raw(Model.Request)
                        </blockquote>
                    </div>
                    <div>
                        <h4>Benefit:</h4>
                        <blockquote class="blockquote">
                            @Html.Raw(Model.Benefit)
                        </blockquote>
                    </div>
                    <h6>Created By: @Model.CreateBy</h6>
                    <h6>Created Date: @Model.CreatedDate</h6>
                    <h6>Update By: @Model.UpdateBy</h6>
                    <h6>Update Date: @Model.UpdatedDate</h6>

                    <div>
                        <a href="~/Admin/Recruitment/EditRecruitment?id=@Model.Id" class="btn btn-dark btn-icon-text">
                            Edit
                            <i class="ti-file btn-icon-append"></i>
                        </a>
                        <a href="~/Admin/Recruitment/ListRecruitment" class="btn btn-danger btn-icon-text">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

