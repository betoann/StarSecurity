@model StarSecurity.Entites.Candidate
@{
    ViewData["Title"] = "DetailCandidate";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h4>Name: @Model.Name</h4>
                        </div>
                        <div class="col-md-4">
                            <h4>Email: @Model.Email</h4>
                        </div>
                        <div class="col-md-4">
                            <h4>Created Date: @Model.CreatedDate</h4>
                        </div>
                    </div>
                    <div class="row">
                        <h4>Message:</h4>
                        <blockquote class="blockquote">
                            @Model.Message
                        </blockquote>
                    </div>
                    <br />

                    <div>
                        <embed src="~/upload/cv/@Model.FileCv"  type="application/pdf">
                    </div>

                    <style>
                        embed{
                            width: 100%;
                            min-height: 800px;
                        }
                    </style>

                    <div>
                        <a href="~/Admin/Recruitment/ListCandidate" class="btn btn-danger btn-icon-text">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

