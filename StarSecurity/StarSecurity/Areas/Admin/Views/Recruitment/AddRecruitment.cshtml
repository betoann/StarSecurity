
@{
    ViewData["Title"] = "AddRecruitment";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add Recruitment</h4>
                    @*<p class="card-description">
                    Basic form layout
                    </p>*@
                    <form action="AddRecruitment" class="forms-sample" method="post">
                        <div class="form-group">
                            <label for="vacancies">Vacancies</label>
                            <input type="text" class="form-control" id="vacancies" placeholder="Vacancies" required>
                        </div>
                        <div class="form-group">
                            <label for="count">Count</label>
                            <input type="number" class="form-control" id="count" placeholder="Count" required>
                        </div>
                        <div class="form-group">
                            <label for="department">Department</label>
                            <select class="form-control" id="department">
                                <option value="1">Manned guarding</option>
                                <option value="2">.....</option>
                                <option value="3">..1224...</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control" id="description" required></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="Status">Status</label>
                            <select class="form-control" id="Status">
                                <option value="1">Recruiting</option>
                                <option value="0">Stop</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="ti-file btn-icon-prepend"></i>
                            Save
                        </button>
                        <a href="~/Admin/Recuitment/ListRecruitment" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section ckeditorJS{
    <script>
        CKEDITOR.replace("description");
    </script>
}