@model IEnumerable<StarSecurity.Entites.Recruitment>
@{
    ViewData["Title"] = "Recruitment";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">List Recruitment</h4>
                    <form action="" class="form-sample" method="get">
                        <div class="row">
                            <div class="form-group col-md-2">
                                <select class="form-control" name="status">
                                    <option value="0">Status</option>
                                    <option value="1">Recruiting</option>
                                    <option value="2">Stopped</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <select class="form-control" name="serviceId" asp-items="@ViewBag.Service">
                                    <option value="0">Department</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <button type="submit" class="btn-sm btn-primary me-2">
                                    <i class="mdi mdi-filter"></i>
                                    Filter
                                </button>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Vacancies</th>
                                    <th>Count</th>
                                    <th>Service</th>
                                    <th>Status</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Vacancies</td>
                                    <td class="text-danger">@item.Count</td>
                                    <td>@item.ServiceId</td>
                                        @if (@item.Status == 1)
                                        {
                                            <td><label class="badge badge-success">Recruiting</label></td>
                                        }
                                        else
                                        {
                                            <td><label class="badge badge-danger">Stop recruitment</label></td>
                                        }
                                    
                                    <td>
                                            <a href="~/Admin/Recruitment/DetailRecruitment?id=@item.Id" class="btn btn-inverse-info btn-rounded btn-icon"><i class="mdi mdi-eye"></i></a>
                                            <a href="~/Admin/Recruitment/EditRecruitment?id=@item.Id" class="btn btn-inverse-primary btn-rounded btn-icon"><i class="mdi mdi-settings "></i></a>
                                            <a href="#" onclick="if(confirm('You definitely delete?') == true){ location.href = '/Admin/Recruitment/DeleteRecruitment?id=@item.Id' }" class="btn btn-inverse-danger btn-rounded btn-icon"><i class="mdi mdi-delete-forever"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

