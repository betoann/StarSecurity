
@{
    ViewData["Title"] = "Recruitment";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">List Recruitment</h4>
                    <form action="" class="form-sample" method="post">
                        <div class="row">
                            <div class="form-group col-md-2">
                                <select class="form-control">
                                    <option>Status</option>
                                    <option>Recruiting</option>
                                    <option>Stop</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <select class="form-control">
                                    <option>Service</option>
                                    <option>Manned guarding</option>
                                    <option>CLose</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <button type="submit" class="btn-sm btn-primary me-2">
                                    <i class="mdi mdi-filter"></i>
                                    Filter
                                </button>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Vacancies</th>
                                    <th>Count</th>
                                    <th>Service</th>
                                    <th>Status</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Employee</td>
                                    <td class="text-danger">99</td>
                                    <td>Manned guarding</td>
                                    <td><label class="badge badge-success">Recruiting</label></td>
                                    <td>
                                        <a href="~/Admin/Recruitment/DetailRecruitment" class="btn btn-inverse-info btn-rounded btn-icon"><i class="mdi mdi-eye"></i></a>
                                        <a href="~/Admin/Recruitment/EditRecruitment" class="btn btn-inverse-primary btn-rounded btn-icon"><i class="mdi mdi-settings "></i></a>
                                        <a class="btn btn-inverse-danger btn-rounded btn-icon"><i class="mdi mdi-delete-forever"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Protect</td>
                                    <td class="text-danger">50</td>
                                    <td>Manned guarding</td>
                                    <td><label class="badge badge-success">Recruiting</label></td>
                                    <td>
                                        <a class="btn btn-inverse-info btn-rounded btn-icon"><i class="mdi mdi-eye"></i></a>
                                        <a class="btn btn-inverse-primary btn-rounded btn-icon"><i class="mdi mdi-settings "></i></a>
                                        <a class="btn btn-inverse-danger btn-rounded btn-icon"><i class="mdi mdi-delete-forever"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

