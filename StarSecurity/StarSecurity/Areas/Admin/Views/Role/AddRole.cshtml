@model StarSecurity.Entites.Role
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add new Role</h4>
                    <form action="AddRole" class="forms-sample" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <span class="text-danger">@ViewBag.error</span>
                        <div class="form-group">
                            <label asp-for="Name">Name of Role</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Name of Role">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleCode">Role Code</label>
                            <input asp-for="RoleCode" type="text" class="form-control" placeholder="Role Code">
                            <span asp-validation-for="RoleCode" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="ti-file btn-icon-prepend"></i>
                            Save
                        </button>
                        <a href="~/Admin/Role/ListRole" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }