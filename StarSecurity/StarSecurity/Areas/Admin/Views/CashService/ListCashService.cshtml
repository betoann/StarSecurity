@model IEnumerable<StarSecurity.Entites.CashService>
@{
    ViewData["Title"] = "CashService";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">CashService list</h4>
                    <form action="" class="form-sample" method="get">
                        <div class="row">
                            <div class="form-group col-md-2">
                                <input type="text" class="form-control" name="name" placeholder="Name of Client" />
                            </div>
                            <div class="form-group col-md-2">
                                <button type="submit" class="btn-sm btn-primary me-2">
                                    <i class="mdi mdi-account-search"></i>
                                    Search
                                </button>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                    <th>Amount of money</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Address</td>
                                        <td>@String.Format("{0:0,00}", item.Amount) <sup>vnd</sup></td>
                                        <td>
                                            <a href="~/Admin/CashService/DetailCashService?id=@item.Id" class="btn btn-inverse-info btn-rounded btn-icon"><i class="mdi mdi-eye"></i></a>
                                            <a href="~/Admin/CashService/EditCashService?id=@item.Id" class="btn btn-inverse-info btn-rounded btn-icon"><i class="mdi mdi-settings"></i></a>
                                            <a href="#" onclick="if(confirm('You definitely delete?') == true){ location.href = '/Admin/CashService/DeleteCashService?id=@item.Id' }" class="btn btn-inverse-danger btn-rounded btn-icon"><i class="mdi mdi-delete-forever"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

