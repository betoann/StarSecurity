@model IEnumerable<StarSecurity.Entites.Client>
@{
    ViewData["Title"] = "Client";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">List of clients</h4>
                    <form action="" class="form-sample" method="get">
                        <div class="row">
                            <div class="form-group col-md-2">
                                <input type="text" class="form-control" name="name" placeholder="Name of Client" />
                            </div>
                            <div class="form-group col-md-2">
                                <button type="submit" class="btn-sm btn-primary me-2">
                                    <i class="mdi mdi-account-search"></i>
                                    Search
                                </button>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Gender</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model){
                                <tr>
                                        <td>@item.Name</td>
                                        @if (@item.Gender == "0"){
                                            <td>Male</td>
                                        }else{
                                            <td>Female</td>
                                        }
                                        <td>@item.Email</td>
                                        <td>@item.Address</td>
                                    <td>
                                        <a href="~/Admin/Client/DetailClient?id=@item.Id" class="btn btn-inverse-info btn-rounded btn-icon"><i class="mdi mdi-eye"></i></a>
                                            <a href="~/Admin/Client/EditClient?id=@item.Id" class="btn btn-inverse-primary btn-rounded btn-icon"><i class="mdi mdi-settings "></i></a>
                                        <a class="btn btn-inverse-danger btn-rounded btn-icon"><i class="mdi mdi-delete-forever"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

