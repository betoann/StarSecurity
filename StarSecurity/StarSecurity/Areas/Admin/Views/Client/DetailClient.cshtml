@model StarSecurity.Entites.Client
@{
    ViewData["Title"] = "DetailClient";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3>Name: @Model.Name</h3>
                    <div class="row">
                        @if (Model.Gender == "0"){
                                <div class="col-md-6"><h4>Gender: Male</h4></div>
                        }
                        else{
                                <div class="col-md-6"><h4>Gender: Female</h4></div>
                        }
                        <div class="col-md-6"><h4>Date of birth: @Model.Dob</h4></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6"><h4>Email: <a href="mailto:@Model.Email">@Model.Email</a></h4></div>
                        <div class="col-md-6"><h4>Phone: <a href="tel:@Model.Phone">@Model.Phone</a></h4></div>
                    </div>
                    <h4>Address: @Model.Address</h4>
                    <br />
                    <div>
                        <h4>Description:</h4>
                        <blockquote class="blockquote">
                            @Html.Raw(@Model.Description)
                        </blockquote>
                    </div>

                    <div>
                        <a href="~/Admin/Client/EditClient?id=@Model.Id" class="btn btn-dark btn-icon-text">
                            Edit
                            <i class="ti-file btn-icon-append"></i>
                        </a>
                        <a href="~/Admin/Client/ListClient" class="btn btn-danger btn-icon-text">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

