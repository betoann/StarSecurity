@model StarSecurity.Entites.RegisterService
@{
    ViewData["Title"] = "DetailClient";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <h3>Name: @Model.Name</h3>
                    </div>
                    <div class="row">
                        <div class="col-md-6"><h4>Email: <a href="mailto:@Model.Email">@Model.Email</a></h4></div>
                        <div class="col-md-6"><h4>Phone: <a href="tel:@Model.Phone">@Model.Phone</a></h4></div>
                    </div>
                    <div class="row">
                        <h4>Address: @Model.Address</h4>
                    </div>
                    <div class="row">
                        @if(Model.ServiceId != null){
                            <div class="col-md-4"><h4>Interested service: <a href="~/Admin/Service/DetailService?id=@Model.ServiceId">Click here to view</a></h4></div>
                        }
                        @if (Model.ProductId != null)
                        {
                            <div class="col-md-4"><h4>Interested products: <a href="~/Admin/Product/DetailProduct?id=@Model.ProductId">Click here to view</a></h4></div>
                        }
                    </div>
                    <br />
                    <div>
                        <h4>Description:</h4>
                        <blockquote class="blockquote">
                            @Html.Raw(@Model.Description)
                        </blockquote>
                    </div>

                    <div>
                        <a href="~/Admin/RegisterService/ListRegisterService" class="btn btn-danger btn-icon-text">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

