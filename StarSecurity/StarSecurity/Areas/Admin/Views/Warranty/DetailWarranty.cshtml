@model StarSecurity.Models.ViewModel.WarrantyDetailModel
@{
    ViewData["Title"] = "DetailWarranty";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <h3>Name: @Model.warranty.Name</h3>
                    </div>
                    <div class="row">
                        <div class="col-md-6"><h4>Email: <a href="mailto:@Model.warranty.Email">@Model.warranty.Email</a></h4></div>
                        <div class="col-md-6"><h4>Phone: <a href="tel:@Model.warranty.Phone">@Model.warranty.Phone</a></h4></div>
                    </div>
                    <div class="row">
                        <h4>Address: @Model.warranty.Address</h4>
                    </div>
                    <div class="row">
                        <div class="col-md-4"><h4>Product: <a href="~/Admin/Product/DetailProduct?id=@Model.product.Id">@Model.product.Name</a></h4></div>
                        <div class="col-md-4"><h4>Price: @String.Format("{0:0,00}", @Model.warranty.Price) <sup>vnd</sup></h4></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            @if (Model.warranty.TimeWarranty > DateTime.Now)
                            {
                                <h4 class="text-success">TimeWarranty: @Model.warranty.TimeWarranty</h4>
                            }
                            else
                            {
                                <h4 class="text-danger">TimeWarranty: @Model.warranty.TimeWarranty</h4>
                            }
                            
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                    <br />
                    <div>
                        <h4>Description:</h4>
                        <blockquote class="blockquote">
                            @Html.Raw(@Model.warranty.Description)
                        </blockquote>
                    </div>

                    <div>
                        <a href="~/Admin/Warranty/EditWarranty?id=@Model.warranty.Id" class="btn btn-dark btn-icon-text">
                            Edit
                            <i class="ti-file btn-icon-append"></i>
                        </a>
                        <a href="~/Admin/Warranty/ListWarranty" class="btn btn-danger btn-icon-text">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

