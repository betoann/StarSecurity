@model StarSecurity.Models.ViewModel.EmployeeDetailModel
@{
    ViewData["Title"] = "DetailEmployee";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="my-profile row">
                        <div class="col-lg-3 left">

                            <div class="avatar">
                                <img src="~/upload/employee/@Model.employee.Avatar" alt="Avatar" />
                            </div>
                            <div class="my-info text-center">
                                <h2>@Model.employee.Name</h2>
                                <p>@Model.employee.Dob</p>
                                @if (Model.employee.Gender == "0")
                                {
                                    <p>Male</p>
                                }
                                else
                                {
                                    <p>Female</p>
                                }
                                <p>@Model.employee.Address</p>
                            </div>
                        </div>
                        <div class="col-lg-9 right">
                            <div>Employee Code: <span>@Model.employee.EmployeeCode</span></div>
                            <div>Educational Qualification: <span>@Model.employee.EduQualifi</span></div>
                            <div class="row">
                                <div class="col-md-6">
                                    Email: <span><a href="mailto:@Model.employee.Email">@Model.employee.Email</a></span>
                                </div>
                                <div class="col-md-6">
                                    Phone: <span><a href="tel:@Model.employee.Phone">@Model.employee.Phone</a></span>
                                </div>
                            </div>
                            <div>Grade: <span>@Model.employee.Grade</span></div>
                            <div class="row">
                                <div class="col-md-6">
                                    Dempartment: @Model.department.Name</span>
                                </div>
                                <div class="col-md-6">
                                    Role: <span>@Model.employee.RoleCode</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    Achievements:
                                </div>
                                <div class="col-md-9">
                                    @Html.Raw(Model.employee.Achievements)
                                </div>
                            </div>
                            @*<div>Status: <span class="badge badge-success">@Model.Status</span></div>*@
                            <div class="table-responsive">
                                <h4>Clients: </h4>
                                <table class="table table-dark">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Address</th>
                                            <th>Status</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.client)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td>@item.Email</td>
                                                <td>@item.Address</td>
                                                @if (item.Status == 0)
                                                {
                                                    <td class="text-danger">Waitting</td>
                                                }
                                                else
                                                {
                                                    <td class="text-success">Done</td>
                                                }
                                                    <td>@item.Description</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

