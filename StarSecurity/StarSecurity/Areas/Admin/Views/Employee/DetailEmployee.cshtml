@model StarSecurity.Entites.Employee
@{
    ViewData["Title"] = "DetailEmployee";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="my-profile row">
                        <div class="col-lg-3 left">

                            <div class="avatar">
                                <img src="~/upload/employee/@Model.Avatar" alt="Avatar" />
                            </div>
                            <div class="my-info text-center">
                                <h2>@Model.Name</h2>
                                <p>@Model.Dob</p>
                                @if (Model.Gender == "0")
                                {
                                    <p>Male</p>
                                }
                                else
                                {
                                    <p>Female</p>
                                }
                                <p>@Model.Address</p>
                            </div>
                        </div>
                        <div class="col-lg-9 right">
                            <div>Employee Code: <span>@Model.EmployeeCode</span></div>
                            <div>Educational Qualification: <span>@Model.EduQualifi</span></div>
                            <div class="row">
                                <div class="col-md-6">
                                    Email: <span><a href="mailto:@Model.Email">@Model.Email</a></span>
                                </div>
                                <div class="col-md-6">
                                    Phone: <span><a href="tel:@Model.Phone">@Model.Phone</a></span>
                                </div>
                            </div>
                            <div>Grade: <span>@Model.Grade</span></div>
                            <div class="row">
                                <div class="col-md-6">
                                    Dempartment: <span><a href="~/Admin/Department/DetailDepartment?id=@Model.DepartmentId">Parts information</a></span>
                                </div>
                                <div class="col-md-6">
                                    Role: <span>@Model.RoleCode</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    Achievements:
                                </div>
                                <div class="col-md-9">
                                    @Html.Raw(Model.Achievements)
                                </div>
                            </div>
                            @*<div>Status: <span class="badge badge-success">@Model.Status</span></div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

