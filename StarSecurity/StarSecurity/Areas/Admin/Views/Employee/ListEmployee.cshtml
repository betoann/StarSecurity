@model IEnumerable<StarSecurity.Entites.Employee>
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">List of Employees</h4>
                    <form action="" class="form-sample" method="get">
                        <div class="row">
                            <div class="form-group col-md-2">
                                <select class ="form-control" name="status">
                                    <option value="0">Status</option>
                                    <option value="1">Action</option>
                                    <option value="2">Restting</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <select class="form-control" asp-items="ViewBag.Service" name="serviceId">
                                    <option value="0">Department</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <input type="text" class="form-control" name="name" placeholder="Name of Employee" />
                            </div>
                            <div class="form-group col-md-2">
                                <button type="submit" class="btn-sm btn-primary me-2">
                                    <i class="mdi mdi-account-search"></i>
                                    Search
                                </button>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Avatar</th>
                                    <th>Employee Code</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Department</th>
                                    <th>Status</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/upload/employee/@item.Avatar" alt="avatar" />
                                    </td>
                                    <td>@item.EmployeeCode</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.ServiceId</td>
                                        @if (@item.Status == 1)
                                        {
                                            <td><label class="badge badge-success">Action</label></td>
                                        }
                                        else
                                        {
                                            <td><label class="badge badge-danger">Restting</label></td>
                                        }
                                    
                                    <td>
                                            <a href="~/Admin/Employee/DetailEmployee?id=@item.Id" class="btn btn-inverse-info btn-rounded btn-icon"><i class="mdi mdi-eye"></i></a>
                                            <a href="~/Admin/Employee/EditEmployee?id=@item.Id" class="btn btn-inverse-primary btn-rounded btn-icon"><i class="mdi mdi-settings "></i></a>
                                            <a href="#" onclick="if(confirm('You definitely delete?') == true){ location.href = '/Admin/Employee/DeleteEmployee?id=@item.Id' }" class="btn btn-inverse-danger btn-rounded btn-icon"><i class="mdi mdi-delete-forever"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
