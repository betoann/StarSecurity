@model IEnumerable<StarSecurity.Entites.Department>
@{
    ViewData["Title"] = "Department";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Department List</h4>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Summary</th>
                                    <th>Status</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td class=""><p>@item.Summary</p></td>
                                        @if (@item.Status == 1)
                                        {
                                            <td><label class="badge badge-success">Display</label></td>
                                        }
                                        else
                                        {
                                            <td><label class="badge badge-danger">Hide</label></td>
                                        }
                                        <td>
                                            <a href="~/Admin/Department/DetailDepartment?id=@item.Id" class="btn btn-inverse-info btn-rounded btn-icon"><i class="mdi mdi-eye"></i></a>
                                            <a href="~/Admin/Department/EditDepartment?id=@item.Id" class="btn btn-inverse-primary btn-rounded btn-icon"><i class="mdi mdi-settings "></i></a>
                                            <a href="#" onclick="if(confirm('You definitely delete?') == true){ location.href = '/Admin/Department/DeleteDepartment?id=@item.Id' }" class="btn btn-inverse-danger btn-rounded btn-icon"><i class="mdi mdi-delete-forever"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

