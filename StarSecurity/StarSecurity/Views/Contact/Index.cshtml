@model StarSecurity.Entites.Contact
@{
    ViewData["Title"] = "Contact";
}

<div class="content-wrapper">
    <div class="form-wrapper">
        <div class="container">
            <div class="address-contact">
                <h2 class="title">
                    WE WANT TO HEAR FROM YOU
                </h2>
                <div class="address">
                    <p>HEAD OFFICE</p>
                    <p>504 Main St E</p>
                    <p>Hamilton, ON Canada</p>
                </div>
                <div class="address">
                    <p>TORONTO OFFICE</p>
                    <p>1101 Queen St W</p>
                    <p>Toronto, ON Canada</p>
                </div>
                <div class="address">
                    <p>LONDON OFFICE</p>
                    <p>717-05 Richmond St</p>
                    <p>London, ON Canada</p>
                </div>
                <div class="contact">
                    <p class="mail"><a href="mailto:starsecurity@gmail.com">starsecurity@gmail.com</a></p>
                    <p class="phone">PH: <a href="tel:905.855.7827">905.855.7827</a></p>
                </div>
            </div>
            <div class="form">
                <form asp-controller="Contact" asp-action="Index" method="post">
                    <div class="form-group">
                        <div class="name">
                            <input asp-for="Name" type="text" class="name" placeholder="Name *" required>
                        </div>
                        <div class="email">
                            <input asp-for="Email" type="email" class="email" placeholder="Email *" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <input asp-for="Phone" type="text" placeholder="Phone *" required>
                    </div>
                    <div class="form-group">
                        <input asp-for="Address" type="text" placeholder="Address *" required>
                    </div>
                    <textarea asp-for="Message" name="message" cols="30" rows="5" placeholder="Message" required></textarea>
                    <button type="submit" class="submit">Send</button>
                </form>
               
            </div>
        </div>
    </div>

    <div style="text-align: center; margin-top: 50px;">
        <p>
