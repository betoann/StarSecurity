@model StarSecurity.Models.ServiceViewModel
@{
    ViewData["Title"] = Model.service.Name;
}

<div class="content-wrapper">
    <div class="container">
        <div class="title" style="text-align: center;">
            <h3>
                @Model.service.Name
            </h3>
        </div>
        <div class="content">
            <p>
                @Html.Raw(Model.service.Description)
            </p>
        </div>
    </div>
</div>

<div class="form-apply">
    <div class="container">
        <h3>Sign up for the service for more advice</h3>
        <p>(or contact starsecurity@gmail.com PH: 905.855.7827)</p>
        <form>
            <div class="form-group">
                <label>Name(*)</label>
                <input type="text" class="form-control"  id="name"/>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email(*)</label>
                        <input type="email" class="form-control"  id="email"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Phone(*)</label>
                        <input type="text" class="form-control"  id="phone" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Address(*)</label>
                <input type="text" class="form-control"  id="address" />
            </div>
            <div class="form-group">
                <label>Description(*)</label>
                <textarea class="form-control" rows="5"  id="description"></textarea>
            </div>
            <input type="hidden" value="@Model.service.Id" id="serviceId"/>
            <button type="button" class="btn btn-info" id="btn-submit">Send</button>
        </form>
    </div>
</div>


<style>
    .prd-slide{
        padding-top: 50px;
    }
</style>
<div class="prd-slide">
    <div class="container">
        <div class="title">
            <p>Electronic security system</p>
        </div>
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                @foreach (var item in Model.products)
                {
                    <div class="swiper-slide">
                        <a href="~/Product/Detail?id=@item.Id"><img src="~/upload//product/@item.Image" /></a>
                        <h6>@item.Name</h6>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function isEmail(emailAddress) {
        var res = new RegExp(/^(("[\w-\s]+")|([\w-]+(?:\.[\w-]+)*)|("[\w-\s]+")([\w-]+(?:\.[\w-]+)*))(@@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$)|(@@\[?((25[0-5]\.|2[0-4][0-9]\.|1[0-9]{2}\.|[0-9]{1,2}\.))((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\.){2}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\]?$)/i);
        return res.test(emailAddress);
    }
    $(document).ready(function () {
        $('#btn-submit').click(function () {
            var name = $('#name').val().trim();
            var email = $('#email').val().trim();
            var phone = $('#phone').val().trim();
            var address = $('#address').val().trim();
            var description = $('#description').val().trim();
            var serviceId = $('#serviceId').val().trim();

            swal({
                title: "Agree to send?",
                text: "",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((ok) => {
                    if (ok) {
                        if (name.length == 0 || email.length == 0 || phone.length == 0 || address.length == 0 || description.length == 0) {
                            swal({
                                title: "Failed",
                                text: "Please complete all information!",
                                icon: "error",
                                button: "Ok!",
                            });
                        }
                        else if(!isEmail(email)){
                            swal({
                                title: "Failed",
                                text: "Email format is incorrect!(Example@gmail.com)",
                                icon: "error",
                                button: "Ok!",
                            });
                        }
                        else {
                            $.ajax({
                                url: '/Business/RegisterService',
                                type: 'post',
                                data: {
                                    name: name,
                                    email: email,
                                    phone: phone,
                                    address: address,
                                    description: description,
                                    serviceId: serviceId
                                },
                                success: function (data) {
                                    if (data.code == 200) {
                                        swal({
                                            title: data.msg,
                                            text: "We will contact you as soon as possible!",
                                            icon: "success",
                                            button: "Ok!",
                                            dangerMode: true,
                                        }).then((ok) => {
                                            window.location.reload();
                                        });
                                    } else {
                                        swal({
                                            title: data.msg,
                                            text: "Registration failed, please try again!",
                                            icon: "error",
                                            button: "Ok!",
                                        });
                                    }
                                },
                                error: function (data) {
                                    swal({
                                        title: data.msg,
                                        text: "Registration failed, please try again!",
                                        icon: "error",
                                        button: "Ok!",
                                    });
                                }
                            });
                        }
                    }
                });
        })
    })

</script>

@section swipper_slide{
    <script>
        var swiper = new Swiper(".mySwiper", {
            watchSlidesProgress: true,
            slidesPerView: 3,
        });
    </script>
}